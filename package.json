{
  "name": "redux",
  "version": "0.0.1",
  "description": "Just a simple redux app",
  "author": "freezystem@gmail.com",
  "license": "UNLICENSED",
  "main": "app/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Freezystem/redux-app.git"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "lodash": "^4.17.4",
    "node-uuid": "^1.4.7",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-auth-wrapper": "^1.0.0",
    "redux-observable": "^0.13.0",
    "rxjs": "^5.1.1"
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-react-html-attrs": "^2.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.23.0",
    "clean-webpack-plugin": "^0.1.15",
    "css-loader": "^0.26.1",
    "deep-freeze": "0.0.1",
    "enzyme": "^2.7.1",
    "esdoc": "^0.5.2",
    "eslint": "^3.15.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-react": "^6.10.0",
    "expect": "^1.20.2",
    "file-loader": "^0.10.0",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.28.0",
    "ignore-styles": "^5.0.1",
    "jsdom": "^9.11.0",
    "jsdom-global": "^2.1.1",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.0",
    "react-addons-test-utils": "^15.4.2",
    "rimraf": "^2.6.0",
    "sass-loader": "^6.0.1",
    "style-loader": "^0.13.1",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  },
  "scripts": {
    "clean": "rimraf node_modules dist && yarn cache clean",
    "dev": "webpack-dev-server --content-base dist --inline --hot --port 3004 --host redux.app.io --open",
    "build": "yarn && webpack -p",
    "build:clean": "yarn run clean && yarn build",
    "test": "mocha --compilers js:babel-register --es_staging --use_strict -r ignore-styles -r jsdom-global/register",
    "test:watch": "yarn test -- --watch",
    "doc": "esdoc"
  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "react-html-attrs",
      "transform-decorators-legacy"
    ]
  },
  "esdoc": {
    "source": "./app",
    "destination": "./docs",
    "test": {
      "type": "mocha",
      "source": "./test",
      "includes": [
        "\\.specs\\."
      ]
    }
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "impliedStrict": true
      }
    },
    "env": {
      "browser": true,
      "es6": true,
      "mocha": true
    },
    "globals": {
      "moment": false,
      "_": false,
      "process": false
    },
    "plugins": [
      "react"
    ],
    "extends": "eslint:recommended",
    "rules": {
      "no-console": "off",
      "no-extra-parens": "off",
      "no-prototype-builtins": "warn",
      "no-template-curly-in-string": "error",
      "no-unsafe-negation": "error",
      "no-unused-vars": "off",
      "array-callback-return": "error",
      "block-scoped-var": "error",
      "class-methods-use-this": "error",
      "consistent-return": "error",
      "curly": "error",
      "default-case": "error",
      "dot-location": [
        "error",
        "property"
      ],
      "dot-notation": "warn",
      "eqeqeq": "warn",
      "guard-for-in": "warn",
      "no-alert": "warn",
      "no-caller": "error",
      "no-div-regex": "error",
      "no-empty-function": "error",
      "no-eq-null": "error",
      "no-eval": "error",
      "no-extra-bind": "error",
      "no-extra-label": "error",
      "no-floating-decimal": "error",
      "no-global-assign": "error",
      "no-implied-eval": "error",
      "no-invalid-this": "error",
      "no-lone-blocks": "error",
      "no-loop-func": "error",
      "no-multi-spaces": "off",
      "no-multi-str": "error",
      "no-new-func": "error",
      "no-new-wrappers": "error",
      "no-new": "error",
      "no-script-url": "error",
      "no-self-compare": "error",
      "no-sequences": "error",
      "no-throw-literal": "error",
      "no-unmodified-loop-condition": "warn",
      "no-useless-call": "error",
      "no-useless-concat": "error",
      "no-useless-escape": "error",
      "no-void": "error",
      "no-with": "error",
      "radix": "error",
      "vars-on-top": "error",
      "yoda": "warn",
      "init-declarations": [
        "error",
        "always"
      ],
      "no-label-var": "error",
      "no-shadow-restricted-names": "error",
      "no-shadow": "error",
      "no-undefined": "error",
      "no-use-before-define": "error",
      "array-bracket-spacing": [
        "error",
        "never"
      ],
      "block-spacing": "error",
      "brace-style": [
        "error",
        "stroustrup",
        {
          "allowSingleLine": true
        }
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "comma-spacing": [
        "error",
        {
          "before": false,
          "after": true
        }
      ],
      "comma-style": [
        "error",
        "last"
      ],
      "computed-property-spacing": [
        "error",
        "never"
      ],
      "func-call-spacing": [
        "error",
        "never"
      ],
      "func-names": [
        "error",
        "always"
      ],
      "func-style": [
        "error",
        "declaration",
        {
          "allowArrowFunctions": true
        }
      ],
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "keyword-spacing": [
        "error",
        {
          "before": true,
          "after": true
        }
      ],
      "no-tabs": "error",
      "quotes": [
        "warn",
        "single"
      ],
      "no-var": "error",
      "semi": "error",
      "react/jsx-uses-vars": "error"
    }
  }
}
